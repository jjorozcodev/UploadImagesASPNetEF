@model IEnumerable<MyImageManager.Models.Image>
@{
    ViewBag.Title = "My Image Manager";
}

<h1>Please select an image to upload!</h1>

@using (Html.BeginForm("Index", "Default", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="postedFile" accept="image/*" />
        <input type="submit" id="btnUpload" value="Upload" />
}
@using (Html.BeginForm("DownloadFile", "Default", FormMethod.Post))
{
    <input type="hidden" id="hfFileId" name="FileId" />
        <input type="submit" id="btnDownload" value="Download" style="display:none" />
}
<hr />
<table cellpadding="0" cellspacing="0">
    <tr>
        <th style="width:50px">File ID</th>
        <th style="width:120px">File Name</th>
        <th style="width:80px">Download</th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var file in Model)
        {
            <tr>
                <td>@file.Id</td>
                <td>@file.Name</td>
                <td>
                    <img class="img-thumbnail" src="data:image;base64,@System.Convert.ToBase64String(file.Data)" />
                    <a href="javascript:;" onclick="DownloadFile(@file.Id)">Download</a>
            </td>

        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
    }
</table>

<script type="text/javascript">
        function DownloadFile(fileId) {
            $("#hfFileId").val(fileId);
            $("#btnDownload")[0].click();
        };
</script>
